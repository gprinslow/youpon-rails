<h1>Employee Sign up</h1>

<br />Sign up by selecting your Merchant affiliation
<br />
<br /> 
<%= form_for @employee do |e| %>
	<%= render 'shared/error_messages', :object => e.object %>
	<div class="field">
		<%= e.label :merchant_id %><br />
		<%= select(:employee, :merchant_id, Merchant.all.collect {|m| [ m.name, m.id] }) %>
	</div>
	<div class="field">
		<%= e.label :is_manager, "Employee or Manager?" %><br />
		<%= select(:employee, :is_manager, [["Employee", false],["Manager", true]])%>
  </div>
	<div class="actions">
		<%= e.submit "Sign up" %>
	</div>
<% end %>

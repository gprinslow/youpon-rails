<h1>Profile</h1>
<table class="profile" summary="Profile information">
	<tr>
		<td class="main">
			<h2>
				<%= gravatar_for @user %>
				<%= @user.email %>
			</h2>
			<br />
			<% if employee?(@user) %><%= link_to "Employee profile", employee_path(current_employee) %><br /><% end %>

			<% if manager?(@user) %><%= link_to "Merchant profile", merchant_path(current_merchant) %><br /><% end %>
		</td>
		<td class="sidebar round">
			<strong>Name</strong> <%= @user.name %><br />
			<strong>Email</strong> <%= @user.email %><br />
			<strong>URL</strong> <%= link_to user_path(@user), @user %><br />
			<% if @user.birthday %><strong>Birthday</strong> <%= @user.birthday %><br /><% end %>
			<% if @user.gender != "unspecified" %><strong>Gender</strong> <%= @user.gender %><br /><% end %>
			<br />
			<%= link_to "Update", edit_user_path(current_user) %>
		</td>
	</tr>
</table>
</br>
</br>

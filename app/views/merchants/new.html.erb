<h1>Merchant Sign up</h1>

<%= form_for @merchant do |f| %>
	<h2>Merchant Info</h2>
	<%= render 'shared/error_messages', :object => f.object %>
	<div class="field">
		<%= f.label :name, "Merchant Name" %><label class='red_asterisk'>*</label><br />
		<%= f.text_field :name %>
	</div>
	<div class="field">
		<%= f.label :description, "Merchant Description" %><label class='red_asterisk'>*</label><br />
		<%= f.text_field :description %>
	</div>
	<div class="field">
		<%= f.label :phone, "Merchant Phone Number" %><label class='red_asterisk'>*</label><br />
		<%= f.text_field :phone %>
	</div>
	<div class="field">
		<%= f.label :website, "Merchant Website" %><label class='red_asterisk'>*</label><br />
		<%= f.text_field :website %>
	</div>
  <%= f.fields_for @location do |n| %>
		<h2>Merchant Location</h2>
		<div class="field">
			<%= n.label :address1, "Address 1" %><label class='red_asterisk'>*</label><br />
			<%= n.text_field :address1 %>
		</div>
		<div class="field">
			<%= n.label :address2, "Address 2" %><br />
			<%= n.text_field :address2 %>
		</div>
		<div class="field">
			<%= n.label :city, "City" %><label class='red_asterisk'>*</label><br />
			<%= n.text_field :city %>
		</div>
		<div class="field">
			<%= n.label :state, "State" %><label class='red_asterisk'>*</label><br />
			<%= n.text_field :state %>
		</div>
		<div class="field">
			<%= n.label :zip, "Zip" %><label class='red_asterisk'>*</label><br />
			<%= n.text_field :zip %>
		</div>
	<% end %>
	<div class="actions">
		<%= f.submit "Sign up" %>
	</div>
<% end %>
